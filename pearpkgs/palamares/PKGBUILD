# Maintainer: Matt C <matt@xhec.us>
pkgname=palamares
pkgver=1.3.2
pkgrel=1
epoch=
pkgdesc="PearOS-Arch Tkinter installer"
arch=('any')
depends=('tk')
url="https://github.com/SomethingGeneric/palamares"
license=('GPL')
source=("${pkgname}::git+https://github.com/SomethingGeneric/palamares")
md5sums=('SKIP')

package() {
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/etc/palamares
	cp -v ${pkgname}/palamares.py $pkgdir/usr/bin/palamares
	cp -v ${pkgname}/scripts/* $pkgdir/etc/palamares/.
}
